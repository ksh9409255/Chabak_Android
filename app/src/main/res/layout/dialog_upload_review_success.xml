<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/car_green" />

    <TextView
        android:id="@+id/tv_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:gravity="center"
        android:text="소중한 리뷰 감사합니다!"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_thanks_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/nanum_barun_gothic_regular"
        android:gravity="center"
        android:text="여러분의 소중한 리뷰는\n차박 여행객들에게 유익한 정보가됩니다."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp" />


</LinearLayout>

